# path: backend/Dockerfile.dev
# version: 1.0
# Development Dockerfile with hot-reload
# Simplified version of production Dockerfile (backend/Dockerfile v4.0)

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies (same as prod)
RUN apt-get update && \
    apt-get install -y gcc g++ curl && \
    rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --user -r requirements.txt

# Copy source code (will be overridden by volume mount)
COPY src/ ./src/

# Set PATH to find installed packages
ENV PATH=/root/.local/bin:$PATH

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:8000/health || exit 1

# Development: uvicorn with hot-reload
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--log-level", "debug"]